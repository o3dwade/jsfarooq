extends layout

block content
  head
    meta(charset='utf-8')
    title Sign in Â· Node Blog
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    style(type='text/css').
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
      margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
      font-size: 16px;
      height: auto;
      margin-bottom: 15px;
      padding: 7px 9px;
      text-align: center;
      }
    link(href='/stylesheets/bootstrap-responsive.css', rel='stylesheet')
  body
    .container
      form.form-signin
        h2.form-signin-heading Please sign in
        input.input-block-level(type='text', placeholder='Email address' name='email')
        input.input-block-level(type='password', placeholder='Password' pw='password')
        label.checkbox
          input(type='checkbox', value='remember-me')
          |  Remember me
        button.btn.btn-large.btn-primary(type='submit') Sign in
    script(src="http://code.jquery.com/jquery.js")
    script(src="/javascripts/bootstrap.js")
    script(src="/javascripts/bootstrap.min.js")
